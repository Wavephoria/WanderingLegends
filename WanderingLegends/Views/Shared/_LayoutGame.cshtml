@using System.ComponentModel.Design

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/styles.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body style="background-color: #A58E74">
<div class="container">
  <div class="header">
    <h1>Wandering Legends</h1>
  </div>

  <div class="clearfix">
    <div class="column menu">
      @RenderSection("MenuStats", true)
    </div>

    <div class="column content">
      @RenderSection("Background", false)
      @RenderBody()
      @RenderSection("Movement", false)
    </div>
  </div>
  <div class="clearfix">
    <div class="footerlinks">
      
      
      <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Home</a>
      <input type="button" value="Wandering Legends" class="btn btn-outline-success"/>
      <input type="button" value="Heroes handbook" class="btn btn-outline-success"/>
      <input type="button" value="Monsters handbook" class="btn btn-outline-success"/>
      <input type="button" value="Items handbook" class="btn btn-outline-success"/>
      <input type="button" value="World map" class="btn btn-outline-success"/>


    </div>
    <div class="footer">
      <p>Jens Gustafsson</p>
      <p>Made in 2023</p>
    </div>
  </div>
</div>
</body>
</html>